{
    "name": "Cookies Dashboard",
    "version": "1.0.0",
    "description": " This is an extension for cookies",
    "manifest_version": 2,
    "permissions": ["cookies", "tabs" , "http://*/*", "https://*/*", ",<all_urls>"],
    "author": "Daniela Sanchez",
    "browser_action":{
        "default_popup": "index.html",
        "default_title": "Cookies Dashboard"
    },
    "background": {
        "scripts" : ["background.js"],
        "persistent":false
    },
    "content_scripts":[{
        "matches":["<all_urls"],
        "js": ["content.js"]
    }]
}